                    <div class="main-content">
                      <!-- main-content-wrap -->
                      <div class="container">
                        <h3 class="mb-4 fw-bold d-flex align-items-center"><i class="icon-star text-warning me-2"></i>📋 Premium Apartment Bookings Board</h3>
                        <% if (bookings && bookings.length > 0) { %>
                          <div class="row">
                            <% bookings.forEach(function(booking) { %>
                              <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow h-100 border-success position-relative">
                                  <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                      <h5 class="card-title text-primary mb-0"><i class="icon-home me-1"></i>
                                        <%= booking.bookingType %> Stay
                                      </h5>
                                      <span class="badge <%= booking.bookingStatus === 'Confirmed' ? 'bg-info text-dark' : booking.bookingStatus === 'Completed' ? 'bg-success' : 'bg-danger' %> text-uppercase p-2">
                                        <%= booking.bookingStatus %>
                                      </span>
                                    </div>
                                    <ul class="list-unstyled mb-3">

                                      <li>
                                        <strong>🏢 Property:</strong>
                                        <% if (booking.apartment) { %>
                                          <%= booking.apartment.propertyName || booking.apartment.propertyTitle || booking.propertyName || booking.apartment.name || booking.apartment.title || 'N/A' %>
                                        <% } else { %>
                                          <span class="text-danger">Apartment Deleted</span>
                                        <% } %>
                                      </li>

                                      <% if (booking.bookingType === "Full Apartment" && booking.fullApartmentDetails) { %>
                                        <li class="ms-2">
                                          <strong>🔑 Apartment Booked:</strong>
                                          <%= booking.fullApartmentDetails.name || booking.fullApartmentDetails.title || 'N/A' %>
                                          <% if (booking.fullApartmentDetails.rooms && booking.fullApartmentDetails.rooms.length > 0) { %>
                                            <br>
                                            <span class="text-muted small">(Rooms: 
                                              <%= booking.fullApartmentDetails.rooms.map(function(room) { return room.name || room.title || room.roomNumber || 'Room'; }).join(", ") %>)
                                            </span>
                                          <% } %>
                                        </li>
                                      <% } %>
                                      
                                      <% if (booking.bookingType === "Room" && Array.isArray(booking.roomDetails) && booking.roomDetails.length > 0) { %>
                                        <li class="ms-2">
                                          <strong>🚪 Room(s) Booked:</strong>
                                          <ul class="ps-3 mb-0">
                                            <% booking.roomDetails.forEach(function(room) { %>
                                              <li>
                                                <%= room.name || room.title || room.roomNumber || 'Room' %>
                                                <% if (room.bedType) { %>
                                                  (<%= room.bedType %> bed)
                                                <% } %>
                                                <% if (room.floor) { %>
                                                  , <small>Floor: <%= room.floor %></small>
                                                <% } %>
                                              </li>
                                            <% }); %>
                                          </ul>
                                        </li>
                                      <% } %>
                                      
                                      <li><strong>👤 Guest:</strong> <%= booking.guestDetails.name %></li>
                                      <li><strong>📧 Email:</strong> <%= booking.guestDetails.email %></li>
                                      <li><strong>📱 Phone:</strong> <%= booking.guestDetails.phone %></li>
                                      <li><strong>🗓️ Check-In:</strong> <%= new Date(booking.checkInDate).toLocaleDateString() %></li>
                                      <li><strong>🗓️ Check-Out:</strong> <%= new Date(booking.checkOutDate).toLocaleDateString() %></li>
                                      <li><strong>👥 Guests:</strong> <%= booking.totalGuests %></li>
                                      <li><strong>🌙 Nights:</strong> <%= booking.totalNights %></li>
                                      <li><strong>💵 Total:</strong> <span class="text-success fw-bold">₹<%= booking.totalPrice && booking.totalPrice.toLocaleString ? booking.totalPrice.toLocaleString() : booking.totalPrice %></span></li>
                                      <li><strong>💸 Payment:</strong> 
                                        <span class="badge <%= booking.paymentStatus === 'Paid' ? 'bg-success' : booking.paymentStatus === 'Pending' ? 'bg-warning text-dark' : 'bg-danger' %>">
                                          <%= booking.paymentStatus %>
                                        </span>
                                      </li>
                                      <% if (booking.specialRequests) { %>
                                        <li><strong>📝 Special Requests:</strong> <%= booking.specialRequests %></li>
                                      <% } %>
                                      <li class="text-muted"><small>Created: <%= new Date(booking.createdAt).toLocaleString() %></small></li>
                                    </ul>
                                    <div class="d-flex gap-2 mt-2">
                                      <% if (booking.bookingStatus !== 'Cancelled') { %>
                                      <!-- CANCEL booking button (soft/cancel) -->
                                      <button class="btn btn-outline-warning btn-sm cancel-booking" data-id="<%= booking._id %>">
                                        <i class="icon-x"></i> Cancel
                                      </button>
                                      <% } %>
                                      <!-- DELETE booking button (hard delete, always show) -->
                                      <button class="btn btn-outline-danger btn-sm delete-booking" data-id="<%= booking._id %>">
                                        <i class="icon-trash"></i> Delete
                                      </button>
                                      <% if (booking.bookingStatus === 'Confirmed' && booking.paymentStatus !== 'Paid') { %>
                                      <!-- MARK AS PAID -->
                                      <button class="btn btn-outline-success btn-sm update-status" data-id="<%= booking._id %>" data-status="Completed" data-payment="Paid">
                                        <i class="icon-check-circle"></i> Mark Paid & Complete
                                      </button>
                                      <% } else if (booking.bookingStatus === 'Confirmed') { %>
                                      <!-- MARK AS COMPLETED -->
                                      <button class="btn btn-outline-primary btn-sm update-status" data-id="<%= booking._id %>" data-status="Completed" data-payment="<%= booking.paymentStatus %>">
                                        <i class="icon-check"></i> Complete
                                      </button>
                                      <% } %>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% }) %>
                          </div>
                        <% } else { %>
                          <div class="alert alert-info text-center py-4 fs-5">
                            🚫 No bookings found.<br>
                            Start spreading smiles, accept your first booking soon!
                          </div>
                        <% } %>
                      </div>
                      <script>
                        document.addEventListener('DOMContentLoaded', function() {
                          // CANCEL booking (soft cancel)
                          document.querySelectorAll('.cancel-booking').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                              var id = btn.getAttribute('data-id');
                              if (confirm('Are you sure you want to cancel this booking?')) {
                                fetch('/premium-apartment-booking/' + id + '/cancel', {
                                  method: 'PUT',
                                  headers: {
                                    'Accept': 'application/json'
                                  }
                                })
                                .then(function(response) {
                                  if (response.ok) {
                                    location.reload();
                                  } else {
                                    alert('Error cancelling booking!');
                                  }
                                })
                                .catch(function() {
                                  alert('Error cancelling booking!');
                                });
                              }
                            });
                          });

                          // DELETE booking (hard delete)
                          document.querySelectorAll('.delete-booking').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                              var id = btn.getAttribute('data-id');
                              if (confirm('Are you sure you want to permanently delete this booking? This cannot be undone.')) {
                                fetch('/premium-apartment-booking', {
                                  method: 'DELETE',
                                  headers: {
                                    'Content-Type': 'application/json',
                                    'Accept': 'application/json'
                                  },
                                  body: JSON.stringify({ id: id })
                                })
                                .then(function(response) {
                                  if (response.ok) {
                                    location.reload();
                                  } else {
                                    alert('Error deleting booking!');
                                  }
                                })
                                .catch(function() {
                                  alert('Error deleting booking!');
                                });
                              }
                            });
                          });

                          // UPDATE status (complete, paid, etc)
                          document.querySelectorAll('.update-status').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                              var id = btn.getAttribute('data-id');
                              var status = btn.getAttribute('data-status');
                              var paymentStatus = btn.getAttribute('data-payment');
                              fetch('/premium-apartment-booking/' + id + '/status', {
                                method: 'PUT',
                                headers: {
                                  'Content-Type': 'application/json',
                                  'Accept': 'application/json'
                                },
                                body: JSON.stringify({ status: status, paymentStatus: paymentStatus })
                              })
                              .then(function(response) {
                                if (response.ok) {
                                  location.reload();
                                } else {
                                  alert('Error updating booking status!');
                                }
                              })
                              .catch(function() {
                                alert('Error updating booking status!');
                              });
                            });
                          });

                        });
                      </script>
