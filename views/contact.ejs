                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>Get in Touch</h3>
                                    <form id="whatsappContactForm" class="contact__form" onsubmit="submitToWhatsApp(event)">
                                        <!-- form message -->
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="alert alert-success contact__msg" style="display: none"
                                                    role="alert"> Your message was sent successfully. </div>
                                            </div>
                                        </div>
                                        <!-- form elements -->
                                        <div class="row">
                                            <div class="col-md-6 form-group">
                                                <input name="name" id="wa-name" type="text" placeholder="Your Name *" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <input name="email" id="wa-email" type="email" placeholder="Your Email *" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <input name="phone" id="wa-phone" type="text" placeholder="Your Number *" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <input name="subject" id="wa-subject" type="text" placeholder="Subject *" required>
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <textarea name="message" id="wa-message" cols="30" rows="4"
                                                    placeholder="Message *" required></textarea>
                                            </div>
                                            <div class="col-md-12 mt-10">
                                                <button type="submit" class="butn-dark2"><span>Send
                                                        Message</span></button>
                                            </div>
                                        </div>
                                    </form>
                                    <script>
                                    function submitToWhatsApp(e) {
                                        e.preventDefault();
                                        var name = document.getElementById('wa-name').value.trim();
                                        var email = document.getElementById('wa-email').value.trim();
                                        var phone = document.getElementById('wa-phone').value.trim();
                                        var subject = document.getElementById('wa-subject').value.trim();
                                        var message = document.getElementById('wa-message').value.trim();

                                        var waBody = "*Transha Stays Contact Form*\n" +
                                            "*Name:* " + name + "\n" +
                                            "*Email:* " + email + "\n" +
                                            "*Phone:* " + phone + "\n" +
                                            "*Subject:* " + subject + "\n" +
                                            "*Message:* " + message;

                                        var waNumber = "919605832333";
                                        var encoded = encodeURIComponent(waBody);
                                        var waUrl = "https://wa.me/" + waNumber + "?text=" + encoded;

                                        window.open(waUrl, "_blank");

                                        // Optionally, show the successful message UI
                                        var msgDiv = document.querySelector('.alert.contact__msg');
                                        if(msgDiv) {
                                            msgDiv.style.display = "block";
                                            setTimeout(function() { msgDiv.style.display = "none"; }, 4000);
                                        }
                                        // Optionally, reset the form
                                        document.getElementById('whatsappContactForm').reset();
                                        return false;
                                    }
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
