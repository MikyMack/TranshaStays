  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const filterGroup = document.getElementById("apartmentFilterGroup");
      const roomNodes = document.querySelectorAll(".rooms1-single");

      function getOwlIndexOfFirstVisible($carousel) {
        // Returns the index for Owl Carousel corresponding to the first visible room
        let $visible = $carousel.find('.rooms1-single').filter(function () {
          return $(this).css('display') !== 'none';
        });
        if ($visible.length) {
          // Calculate index of first visible within carousel items
          let allItems = $carousel.find('.rooms1-single');
          let firstVisible = $visible[0];
          return allItems.index(firstVisible);
        }
        return 0;
      }

      filterGroup.addEventListener("click", function (e) {
        if (!e.target.classList.contains("transha-filter-btn")) return;

        // Set active button
        Array.from(filterGroup.children).forEach(btn => btn.classList.remove('active'));
        e.target.classList.add('active');
        const selected = e.target.getAttribute("data-apartment");

        // Show/hide room items
        let visibleRooms = [];
        roomNodes.forEach(room => {
          const aId = room.getAttribute("data-apartment");
          if (selected === "all" || aId === selected) {
            room.style.display = "block";
            visibleRooms.push(room);
          } else {
            room.style.display = "none";
          }
        });

        // Owl Carousel: Refresh and CENTER to show first visible room in center
        const $carousel = $(".rooms1-carousel");
        if ($carousel.data("owl.carousel")) {
          $carousel.trigger("refresh.owl.carousel");
          setTimeout(function () {
            let idx = getOwlIndexOfFirstVisible($carousel);
            // Center the selected apartment's first room in carousel
            let owlData = $carousel.data('owl.carousel');
            if (owlData && owlData.settings.center) {
              $carousel.trigger('to.owl.carousel', [idx, 400, true]);
            } else {
              $carousel.trigger('to.owl.carousel', [idx, 400, true]);
            }
          }, 200);
        }
      });

      // On page load, auto-center all
      setTimeout(function () {
        const $carousel = $(".rooms1-carousel");
        if ($carousel.data("owl.carousel")) {
          let idx = getOwlIndexOfFirstVisible($carousel);
          $carousel.trigger('to.owl.carousel', [idx, 400, true]);
        }
      }, 400);
    });
  </script>
